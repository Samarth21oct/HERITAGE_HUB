                display: flex;
                justify-content: space-between;
            }
        
            .time-group input {
                width: 45%;
            }
        
            button {
                width: 100%;
                padding: 10px;
                background-color: #4CAF50;
                color: white;
                border: none;
                cursor: pointer;
            }
        
            button:hover {
                background-color: #45a049;
            }
